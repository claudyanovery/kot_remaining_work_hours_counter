{
    "name": "KOT Remaining Work Hours Counter",
    "version": "1.0",
    "description": "Extension to check the remaining work hours",
    "permissions": ["activeTab", "declarativeContent", "storage"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "19": "icon.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["https://s2.kingtime.jp/admin/*?page_id=/working/monthly_individual_working_list_custom&call_from=individual_view&date_selection_type=1"],
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "manifest_version": 2
}